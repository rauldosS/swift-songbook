RewriteEngine On
RewriteCond %{SERVER_PORT} 80

# Redirecionamento personalizado para "fearless"
RewriteRule ^fearless/?$ /chord/fearless/fearless.html [L]

# Página de erro personalizada para erro 404
ErrorDocument 404 /errors/not_found.html

# Tratar URLs sem a extensão .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirecionamento para "fearless.html" quando "fearless" é acessado diretamente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^fearless$ /chord/fearless/fearless.html [L]
